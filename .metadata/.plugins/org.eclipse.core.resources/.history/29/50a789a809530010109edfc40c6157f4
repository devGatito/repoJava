package Estudios;

import java.util.Scanner;

public class FUN1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//Ejercicio 1
		Scanner lec;
		int a,b,suma,resta,div,mult;
		
		System.out.print("Ingresa el valor del numero 1: \n");
		lec = new Scanner(System.in);
		a = lec.nextInt();
		System.out.print("El valor ingresado del numero 1 es: " + a);
		
		System.out.print("\n Ingresa el valor del numero 2: \n");
		lec = new Scanner(System.in);
		b = lec.nextInt();
		suma = a + b;
		resta = a - b;
		div = a / b;
		mult = a * b;
		
		System.out.print("====Lista de Operaciones====");
		System.out.printf("====Suma %f==== ",suma );
		System.out.printf("====Suma %f==== ",resta );
		System.out.printf("====Suma %f==== ",div );
		System.out.printf("====Suma %f==== ",mult );
		

		
		
		
		
		

	}

}
