package estudio;

public class Main {

	public static void main(String[] args) {
		System.out.println("Hola mundo");
		// ejecuciones con colores

		System.out.print("\033[32m" + "Green" + "\033[0m");
		System.out.print("\n \033[33m" + "Yellow");
		System.out.print("\n \033[34m" + "blueDark");
		System.out.print("\n \033[35m" + "rosa");
		System.out.print("\n \033[36m" + "azulLight");
		System.out.print("\n \033[37m" + "blanco");
		// musica
		System.out.println("\n \u266A");
		System.out.println("\n \u266B");

		System.out.printf("\n El numero %d no tiene decimales", 21);
		System.out.printf("\n El numero %f  tiene decimales", 21.4);
		System.out.printf("\n El numero %.1f tiene exactamente 1 decimal", 300.4);

		/* /==== EJERCICIOS ===/ */

		System.out.print("\n Elias" + "\n calle de la Plata" + "\n +527621240911");

		System.out.print("\n computer" + " ordenador" + "\n student" + "  estudiante" + "\n cat" + "      gato");

		System.out.print("\n =====/ Horario de clases /=====");
		System.out.print("\n \033[32m computer \033[0m" + "  9:12" + "\n \033[33m matematicas \033[0m" + "  11:00"
				+ "\n \033[35m ciencias \033[0m" + "     13:00");

		System.out.print("\n     *");
		System.out.print("\n    ***");
		System.out.print("\n  ******");
		System.out.print("\n**********");

		System.out.print("\n     *");
		System.out.print("\n    * *");
		System.out.print("\n   *   *");
		System.out.print("\n  *     *");
		System.out.print("\n**********");

		System.out.print("\n**********");
		System.out.print("\n *     *");
		System.out.print("\n  *   *");
		System.out.print("\n   * *");
		System.out.print("\n    *");

		System.out.print("Aprende ejercicios con JAVA");
		System.out.print("\n \u1F656");

		/* ====== TIPOS DE VARIABLES ====== */

		// NUMEROS ENTEROS - int
		// declara la variable sin valor asignar
		int x;
		long limLong = Long.MAX_VALUE;
		long minLong = Long.MIN_VALUE;

		// se inicializa el valor
		x = 5;

		// imprimos el valor
		System.out.printf("El valor de x es: " + x);
		System.out.print("\n  \033[32m el valor maximo: \033[0m" + limLong);
		System.out.print(" \n el valor minimo: " + minLong);

		// codigo incorrecto;
		double y, z;
		// codigo limpio;
		double a;
		double b;

		// cadenas de caracteres

		String miPalabra = "hola";
		String oracion = "pepe juega a la pelota";

		// tambien podemos inicializarla pero vacia y despues se puede inicializarla

		String textoVacio = "";
		textoVacio = "segundo caso";

		System.out.print("\n" + miPalabra);
		System.out.print("\n" + oracion);
		System.out.print("\n" + textoVacio);

		char caracter =  'C';
		char caracter1 = 'A';
		char caracter2 = 'S';
		char caracter3 = 'A';
		
		System.out.print("Union de Caracteres: " + caracter + caracter1 + caracter2 + caracter3 );

	}

}
