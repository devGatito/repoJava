package Estudios;

import java.util.Scanner;

public class FUN1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// Ejercicio 1
		Scanner lec;
		int a, b, suma, resta, mult;
		double div;

		System.out.print("Ingresa el valor del numero 1: \n");
		lec = new Scanner(System.in);
		a = lec.nextInt();
		System.out.print("El valor ingresado del numero 1 es: " + a);

		System.out.print("\n Ingresa el valor del numero 2: \n");
		lec = new Scanner(System.in);
		b = lec.nextInt();
		System.out.print("El valor ingresado del numero 2 es: " + b);

		suma = a + b;
		resta = a - b;
		div = a / b;
		mult = a * b;

		System.out.print("\n  ==== Lista de Operaciones====");
		System.out.printf("\n ==== Suma  		  ==== " + suma);
		System.out.printf("\n ==== Resta  		  ==== " + resta);
		System.out.printf("\n ==== Division  	  ==== " + div);
		System.out.printf("\n ==== Multiplicacion ==== " + mult);

		// Ejercicio 2: Conversor de caracteres

		char pos, pos1, pos2, pos3;
		System.out.print("\n Ingresa los 4 caracteres ");
		lec = new Scanner(System.in);
		pos = lec.next().charAt(0);

		lec = new Scanner(System.in);
		pos1 = lec.next().charAt(0);

		lec = new Scanner(System.in);
		pos2 = lec.next().charAt(0);
		lec = new Scanner(System.in);
		pos3 = lec.next().charAt(0);

		System.out.print("el mensaje es" + (pos + pos1 + pos2 + pos3));

	}

}
